{%- style -%}
  /* hide header navigation */
  .header__inline-menu {
    display: none !important;
  }
  .header__icons{
    display: none !important;
  }
  /* hide footer */
  /* footer{
  display: none !important;
  } */
  body {
    text-align: center;
  }
  main {
    position: relative;
  }
  main:before {
    content: "";
    background-image: url('//cdn.shopify.com/s/files/1/0665/3834/0580/files/coming_soon.jpg?v=1682672113');
    background-size: cover;
    background-position: center;
    opacity: 0.3;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  input[type="email"] {
    height: 4rem;
    width: 100%;
    max-width: 400px;
    padding: 0.5rem;
    margin-bottom: 3rem;
    border: none;
  }
  .title {
    font-size: 3.5rem;
    margin: 10rem 18rem 3rem 18rem;
    color: #DC202E;
  }
  p {
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  button{
    margin-bottom: 3rem;
  }

  @media (max-width: 480px) {
    .title {
      font-size: 2rem;
      margin: 4rem 1rem 1rem 1rem;
    }
    p {
      font-size: 1.2rem;
      margin: 4rem 1rem 4rem 1rem;
    }
    input[type="email"] {
      height: 3rem;
      width: 70%;
      margin-bottom: 4rem;
    }
  }
{%- endstyle -%}


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coming Soon</title>
  {{ 'style.css' | asset_url | stylesheet_tag }}
</head>
<body>
  <div class="coming-soon-container">
    <div>
      <h1 class="title h1">High Tech, Innovative Cordless Vacuum & Floor Cleaners Coming Soon.</h1>
    </div>
    <div>
      <p>If you want to get notified when the website goes live, please subscribe to our mailing list!</p>
    </div>
    <div>
      <input type="email" placeholder="Email address" required>
    </div>
    <div>
      <button class="button button-primary">Notify Me!</button>
    </div>
  </div>
</body>
</html>
</html>
