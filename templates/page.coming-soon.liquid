{%- style -%}
input[type="email"]::placeholder {
  color: #000; /* change this to the color you want */
  opacity: 0.4; /* Firefox */
}

.success-message {
  margin-top: 10rem;
}

.success-message svg {
  width: 24px;  /* adjust as necessary */
  height: 24px; /* adjust as necessary */
}

input[type="email"]:focus {
  outline: none;
  border: none;
  margin-bottom: 3rem; /* adjust as necessary */
}

.input-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header__heading-link {
  pointer-events: none;
  cursor: default;
}

  /* hide header navigation */
  /* .header__inline-menu {
    display: none !important;
  }
  .header__icons{
    display: none !important;
  } */
  /* hide footer */
  /* footer{
  display: none !important;
  } */
  body {
    text-align: center;
  }
  main {
    position: relative;
  }
  main:before {
    content: "";
    background-image: url('//cdn.shopify.com/s/files/1/0665/3834/0580/files/coming_soon.jpg?v=1682672113');
    background-size: cover;
    background-position: center;
    opacity: 0.3;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  input[type="email"] {
    height: 4rem;
    width: 100%;
    max-width: 400px;
    padding: 0.5rem;
    margin-bottom: 3rem;
    border: none;
  }
  .title {
    font-size: 3.5rem;
    margin: 8rem 18rem 3rem 18rem;
    color: #DC202E;
  }

  p {
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  button{
    margin-bottom: 3rem;
  }

  .button.button-primary{
    font-size: 1.4rem; /* adjust to your desired size */
    font-family: 'Honeywell-Bold';
    box-sizing: border-box;
    padding: 15px 5px;
    height: 52px;
    line-height: 18px;
    outline: none;
    overflow: visible;
    padding: 15px 5px;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    width: 220px;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    justify-content: center;
    align-items: center;
  }
   header-drawer{
    display: none !important;
  }

  @media (max-width: 480px) {
    .title {
      font-size: 2rem;
      margin: 4rem 1rem 1rem 1rem;
    }
    p {
      font-size: 1.2rem;
      margin: 4rem 1rem 4rem 1rem;
    }
    input[type="email"] {
      height: 3rem;
      width: 70%;
      margin-bottom: 4rem;
    }
  }
{%- endstyle -%}


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coming Soon</title>
  {{ 'style.css' | asset_url | stylesheet_tag }}
</head>
<body>
  <div class="coming-soon-container">
    {%- if form.posted_successfully? -%}
    <h3 class="success-message" id="ContactFooter-success" tabindex="-1" autofocus>{% render 'icon-success' %}Subscribe Success</h3>
  {%- endif -%}
        

    <div>
      <h1 class="title h1">High Tech, Innovative Cordless Vacuum & Floor Cleaners Coming Soon.</h1>
    </div>
    <div>
      <p>If you want to get notified when the website goes live, please subscribe to our mailing list!</p>
    </div>
      <div>
        {% form 'customer' %}
        <div class="input-group">
          <input
            id="NewsletterForm"
            type="email"
            name="contact[email]"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            placeholder="Email address"
            required
          >
          <button type="submit" class="button button-primary" name="commit" id="NotifyMe">
            NOTIFY ME
          </button>
        </div>
        {%- if form.errors -%}
          <small class="newsletter-form__message form__message" id="ContactFooter-error">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
        {%- endif -%}
      </div>
    {% endform %}
  </div>
</body>
</html>
</html>
